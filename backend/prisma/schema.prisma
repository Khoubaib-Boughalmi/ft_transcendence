// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GameMatch {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Game info
  player1_id    String
  player2_id    String
  player1_score Int
  player2_score Int
  winner_id     String
  duration      Int
  game_type     String
  game_league   String
  game_map      String
}

model User {
  // Identification
  id         String   @id @default(uuid())
  intra_id   Int      @unique
  username   String   @unique
  email      String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Profile info
  country      String
  avatar       String      @default("https://i.ytimg.com/vi/FNXf9XkUZ0M/maxresdefault.jpg")
  banner       String      @default("https://dslv9ilpbe7p1.cloudfront.net/6P2tJV-6qxBDs2T8q21wZg_store_banner_image.jpeg")
  level        Int         @default(0)
  level_exp    Int         @default(0)
  achievements Int[]       @default([])
  history      String[]    @default([])
  rank         Int         @default(0)
  division     String      @default("D")

  // Two factor auth
  two_factor        Boolean @default(false)
  two_factor_secret String?

  // Relations
  friends           User[] @relation("friends")
  friendOf          User[] @relation("friends")
  friend_requests   User[] @relation("FriendRequests")
  friend_requestsOf User[] @relation("FriendRequests")
  blocked_users     User[] @relation("BlockedUsers")
  blocked_usersOf   User[] @relation("BlockedUsers")
}
