// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GameMatch {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Game info
  player1_id    String
  player2_id    String
  player1_score Int
  player2_score Int
  winner_id     String
  duration      Int
  game_type     String
  game_league   String
  game_map      String
}

model User {
  // Identification
  id         String   @id @default(uuid())
  intra_id   Int      @unique
  username   String   @unique
  email      String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Profile info
  country      String
  avatar       String   @default("https://i.ytimg.com/vi/FNXf9XkUZ0M/maxresdefault.jpg")
  banner       String   @default("https://dslv9ilpbe7p1.cloudfront.net/6P2tJV-6qxBDs2T8q21wZg_store_banner_image.jpeg")
  level        Int      @default(0)
  level_exp    Int      @default(0)
  achievements Int[]    @default([])
  history      String[] @default([])
  rank         Int      @default(0)
  division     String   @default("D")

  // Two factor auth
  two_factor        Boolean @default(false)
  two_factor_secret String?
}

model Friends {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user1_id String
  user2_id String
}

model BlockedUsers {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user1_id String
  user2_id String
}

model FriendRequests {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user1_id String
  user2_id String
}

model Chat {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  chatName          String   @default("")
  chatIcon          String   @default("")
  chatDescription   String   @default("")
  users             String[]
  isGroupChat       Boolean  @default(false)
  groupAdmins       String[] @default([])
  invites           String[] @default([])
  passwordProtected Boolean  @default(false)
  chatPassword      String   @default("")
}

model Message {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  chat_id String
  user_id String
  content String
}
